@model Eagles_Website.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

<h1 class="mt-4">Edit Category</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label category-label">Category Name:</label>
                <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label category-label">Category Description:</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter category description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .category-label {
        font-weight: bold;
        color: #333;
    }
</style>
