@model Eagles_Website.ViewModels.LoginRegisterViewModel.LoggedInCustomer

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_SignIn.cshtml";
}
<hr />
    <main class="form-signin">
    <h4>Login</h4>
        <form asp-controller="Account" asp-action="SaveLogin" method="post">
            <img class="mb-4" src="~/Images/Logo.png" alt="" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Please Sign In</h1><br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div><br />
            <div class="form-floating">
                <input asp-for="UserName" class="form-control" id="floatingInput" placeholder="User Name"/>
                <label asp-for="UserName" class="control-label"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div><br />
            <div class="form-floating">
                <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password"/>
                <label asp-for="Password" class="control-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="w-100 btn btn-lg btn-primary"/>
            </div>
            <div class="mt-3 text-center">
                <p>Don't have an account? <a asp-action="Register" asp-controller="Account">Register here</a>.</p>
            </div>
            <p class="mt-5 mb-3 text-muted">&copy; Eagles ITI PWD Track 2023 - 2024</p>
        </form>
        <div>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
        </div>
    </main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}