@model Eagles_Website.ViewModels.LoginRegisterViewModel.RegisteredCustomer

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_SignIn.cshtml";
}
<main class="form-signin">
    <h1>Register</h1>
    <hr />
            <form asp-controller="Account" asp-action="SaveRegister" method="post">
                <img class="mb-3" src="~/Images/Logo.png" alt="" width="72" height="57">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="UserName" class="form-control" id="floatingInput" placeholder="User Name" />
                    <label asp-for="UserName" class="control-label"></label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" id="floatingInput" placeholder="Email"/>
                    <label asp-for="Email" class="control-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" id="floatingInput" placeholder="Password"/>
                    <label asp-for="Password" class="control-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" class="form-control" id="floatingInput" placeholder="Confirm Password"/>
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Address" class="form-control" id="floatingInput" placeholder="Address"/>
                    <label asp-for="Address" class="control-label"></label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="ZipCode" class="form-control" id="floatingInput" placeholder="ZipCode"/>
                    <label asp-for="ZipCode" class="control-label"></label>
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="PhoneNumber" class="form-control" id="floatingInput" placeholder="Phone Number"/>
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div><br />
            <div class="form-floating">
                <input type="submit" value="Create" class="w-100 btn btn-lg btn-primary" />
            </div>
            <div class="mt-3 text-center">
                <p>have an account? <a asp-action="Login" asp-controller="Account">Sign here</a>
            </div>
             <p class="mt-3 mb-3 text-muted">&copy; Eagles ITI PWD Track 2023 - 2024</p>
            </form>
            <div>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
            </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
